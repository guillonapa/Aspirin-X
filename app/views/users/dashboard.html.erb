<% provide(:title, "Dashboard") %>
<% breadcrumb :dashboard %>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-auto">
      <%= gravatar_for @user, 100 %>
    </div>
    <div class="col" style="padding-top: 50px;">
      <h1><%= @user.role.capitalize %> Dashboard: <%= @user.name %></h1>
    </div>
  </div>
  <hr/>
  <br>
  <div class="row">
    <% if @user.role == "student" %>
      <%= render 'users/student_announcement' %>
      <%= render 'users/student_course' %>
    <% else %>
      <%= render 'users/teacher_announcement' %>
      <%= render 'users/teacher_course' %>
    <% end %>
  </div>
</div>
