<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class: "form-control", placeholder: "Name" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "Email Address" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password, class: "form-control", placeholder: "Password", type: "password" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation, class: "form-control", placeholder: "Re-Enter Password", type: "password" %>
  </div>
  <br><br>
  <div class="actions">
    <div class="justify-content-between" style="display: flex">
      <div class="row">
        <div class="col">
          <%= form.submit class: "btn btn-outline-success" %>
        </div>
        <div class="col">
          <%= link_to 'Back', user_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
