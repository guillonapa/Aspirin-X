<% provide(:title, 'Signup') %>
<p><br><br><br></p>
<div style="display: flex; justify-content: center; align-items: center;">
  <div class="form-group col-4">
    <h1 class="card-title">Signup</h1>
    <hr/>
    <%= form_for(:user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, id: :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, id: :email, class: "form-control", placeholder: "Brandeis Email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, id: :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, id: :password_confirmation, class: "form-control", placeholder: "Re-enter password" %>
      </div>
      <div class="form-group row">
        <%= f.label :role, class: "col-4" %>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= f.radio_button :role, 'student', id: :role, class: "form-check-input", placeholder: "Role" %> Student
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= f.radio_button :role, 'teacher', id: :role, class: "form-check-input", placeholder: "Role" %> Teacher
          </label>
        </div>
      </div>
      <hr/>
      <div style="display: flex; justify-content: center; align-items: center">
        <%= f.submit "Signup", class: "btn btn-outline-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
