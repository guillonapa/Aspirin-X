<%# <!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>AsprinX - About</title>
    <!-- Libraries -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
  </head>

  <body style="font-family: 'Roboto Slab'"> %>
    <div class="card text-center">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <%= link_to "Home", root_path, id: "home", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, id: "about", class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Demo", demo_path, id: "demo", class: "nav-link" %>
          </li>
