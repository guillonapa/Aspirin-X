<% provide(:title, "Course Details") %>
<% breadcrumb :course, @course %>
<br>
<div class="container">
  <h3>
    <div class="justify-content-between" style="display: flex">
      <div>
        <%= @course.course_title %>
        (<%= @course.course_code %>)
      </div>
      <% if !is_student? %>
        <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-outline-info btn-sm" %>
      <% end %>
    </div>
  </h3>
  <hr/>
  <% if is_student? %>
    <div class="alert alert-info show" role="alert">
      <strong>Announcement: </strong> You should bring your laptop to class!
    </div>
  <% end %>
  <br>
  <h4 style="display: flex; margin-bottom: 10px" class="justify-content-between">
    <div>Posted Assignments</div>
    <% if !is_student? %>
      <%= link_to 'New Assignment', new_assignment_path(:course_id => @course.id), class: "btn btn-outline-primary btn-sm" %>
    <% end %>
  </h4>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Assignment Name</th>
        <th>Due Date</th>
        <th>Actions</th>
        <% if !is_student? %>
          <th>Submissions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @assignment_list %>
        <% @assignment_list.each do |assignment| %>
        <tr>
          <td><%= assignment.name %></td>
          <td><%= assignment.due_date %></td>
          <% if !is_student? %>
            <td>
              <%= link_to 'Edit', edit_assignment_path(assignment, course_id: @course.id), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Delete', assignment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </td>
            <td>
              <%= link_to 'Show', assignment_url(assignment), class: "btn btn-outline-success btn-sm" %>
            </td>
          <% else %>
            <td>
            <%= link_to 'Show', assignment, class: "btn btn-outline-primary btn-sm" %>
            </td>
          <% end %>
        </tr>
        <% end %>
      <% else %>
        <td colspan="4" align="center">No assignments</td>
      <% end %>
    </tbody>
  </table>
</div>
