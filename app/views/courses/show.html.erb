<% provide(:title, "Course Details") %>
<br>
<div class="container">
  <h3>
    <div class="justify-content-between" style="display: flex">
      <div>
        <%= @course.course_title %>
        (<%= @course.course_code %>)
        <small class="text-muted"><%= @course.teacher_id %></small>
      </div>
      <% if !is_student? %>
        <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-outline-info btn-sm" %>
      <% end %>
    </div>
  </h3>
  <hr/>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <strong>Announcement: </strong> You should bring your laptop to class!
  </div>
  <br>
  <h4 style="display: flex; margin-bottom: 10px" class="justify-content-between">
    <div>Posted Assignments</div>
    <button class="btn btn-outline-primary btn-sm">New Assignment</button>
  </h4>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Assignment #</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @assignment_list %>
        <% @assignment_list.each do |assignment| %>
        <tr>
          <td><%= assignment.id %></td>
          <td><%= assignment.due_date %></td>
          <td>
            <% if !is_student? %>
              <%= link_to 'Edit', edit_assignment_path(assignment), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Delete', edit_assignment_path(assignment), class: "btn btn-outline-danger btn-sm" %>
            <% else %>
              <%= link_to 'Show', assignment_path(assignment), class: "btn btn-outline-primary btn-sm" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% else %>
        <td colspan="4" align="center">No assignments</td>
      <% end %>
    </tbody>
  </table>
</div>
