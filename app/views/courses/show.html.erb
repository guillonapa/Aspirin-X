<% provide(:title, "Course Details") %>
<br>
<div class="container">
  <h3>
    <div class="justify-content-between" style="display: flex">
      <div>
        <%= @course.course_title %>
        (<%= @course.course_code %>)
      </div>
      <% if !is_student? %>
        <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-outline-info btn-sm" %>
      <% end %>
    </div>
  </h3>
  <hr/>
  <div class="row">
    <% if is_student? %>
      <%= render 'courses/announcements' %>
    <% end %>
    <br>
    <%= render 'courses/assignments' %>
  </div>
</div>
