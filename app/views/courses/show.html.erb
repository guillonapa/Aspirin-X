<% provide(:title, "Course Details") %>
<% breadcrumb :course, @course %>
<br>

<div class="container">
  <h3>
    <div class="justify-content-between" style="display: flex">
      <div class="row">
        <div class="col">
          <%= @course.course_title %>
          (<%= @course.course_code %>)
        </div>
      </div>
      <div>
      <% if !is_student? %>
        <div class="btn-group" role="group">
          <button data-toggle="popover" class="btn btn-info btn-sm" data-content="<%= @course.permission %>">
            Permission String
          </button>
          <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-light btn-sm" %>
          <%= link_to 'View Grades', grades_course_path, class: "btn btn-light btn-sm" %>
        </div>
      <% else %>
        <%= link_to "Drop Course", enrollment_path(id: @enrollment_id), class: "btn btn-outline-danger btn-sm", method: :delete %>
      <% end %>
      </div>
    </div>
  </h3>
  <hr/>
  <div class="row">
    <% if is_student? %>
      <%= render 'courses/announcements' %>
    <% end %>
    <br>
    <%= render 'courses/assignments' %>
  </div>
  <br><br>

  <div class="row">
    <div class="col" id="test-results">

    </div>
  </div>
  <div class="row">
    <div class="col" id="test-results-update">

    </div>

  </div>
</div>
