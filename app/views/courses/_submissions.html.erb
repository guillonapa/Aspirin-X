<h5 style="display: flex; margin-bottom: 10px" class="justify-content-between">My Submissions</h5>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Assignment Name</th>
    <th>Date Submitted</th>
    <th>Grade</th>
  </tr>
  </thead>
  <tbody>
  <% if @submissions %>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= link_to submission.assignment.name, submission %></td>
        <td><%= submission.submission_date.strftime('%b %d %Y, %H:%M') %></td>
        <td><%= submission.grade %></td>
      </tr>
    <% end %>
  <% else %>
    <td colspan="4" align="center">No submissions</td>
  <% end %>
  </tbody>
</table>